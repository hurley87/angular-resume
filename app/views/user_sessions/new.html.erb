<%= link_to 'Back', root_path %>
<h1 class='page-header'>Login</h1>

<%= form_tag user_sessions_path, 
             :method => :post, 
             :html => { 
             novalidate: '', 
             name: "SignIn", 
             role: 'form'} do %>

  <div class="form-group">
    <%= label_tag :email %><br>
    <%= text_field_tag 'email', nil,
                     :'ng-model'=> 'SignIn.email', 
                     :type=> 'email', 
                     :minlength => 2,
                     :maxlength => 20,
                     :placeholder => 'Email',
                     :'required'=>'', 
                     :unique => '', 
                     class: 'form-control' %>
  </div>
  <div class="form-group">
   <%= label_tag :password %><br />
   <%= password_field_tag :password, nil,
                        :'ng-model'=>'SignIn.password', 
                        :type=>'password', 
                        :minlength => 2,
                        :maxlength => 20,
                        :placeholder => 'Password',
                        :'required'=>'', 
                        class: 'form-control' %>
</div>
  <div class="actions">
    <%= submit_tag 'Sign In', 
                class: 'btn btn-default',
                'ng-disabled' => 'SignIn.$invalid' %>
  </div>
<% end %>
