<%= form_for @user, 
             :html => { name: "editUser" } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div ng-controller="ClockController">
      <h1 class='page-header'>Click the Circles! 
      <span class='pull-right'>{{ clock }}</span>
      </h1>
       <%= f.hidden_field :time, 
                          :'ng-model'=> 'editUser.time', 
                          :value => "{{ clock }}" %>
  </div>


  <div class="form-group">
    <%= f.label :name, 'Username' %><br>
    <%= f.text_field :name, 
                     :'ng-model'=> 'editUser.name', 
                     :minlength => 2,
                     :maxlength => 20,
                     :'required'=>'', 
                     class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, 
                     :'ng-model'=> 'editUser.email', 
                     :type=> 'email', 
                     :minlength => 2,
                     :maxlength => 20,
                     :placeholder => 'Email',
                     :'required'=>'', 
                     :unique => '', 
                     class: 'form-control' %>
  </div>
  <div class="form-group">
   <%= f.label :password %><br />
   <%= f.password_field :password, 
                        :'ng-model'=>'editUser.password', 
                        :type=>'password', 
                        :placeholder => 'Password',
                        :'required'=>'', 
                        class: 'form-control' %>
</div>
<div class="form-group">
   <%= f.label :password_confirmation %><br />
   <%= f.password_field :password_confirmation, 
                        :'ng-model'=>'editUser.password_confirmation', 
                        :type=>'password', 
                        :'required'=>'', 
                        :value => '',
                        class: 'form-control' %>
</div>
  <div class="actions">
    <%= f.submit 'Finish', 
                class: 'btn btn-default',
                'ng-disabled' => 'editUser.$invalid' %>
  </div>
<% end %>

