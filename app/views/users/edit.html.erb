<h1 class='page-header'>Editing Profile</h1>

<%= form_for @user, 
             :html => { 
              novalidate: '', 
              name: "editUser", 
              role: 'form'} do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, 
                     :'ng-model'=> 'editUser.email', 
                     :type=> 'email', 
                     :minlength => 2,
                     :maxlength => 20,
                     :placeholder => 'Email',
                     :'required'=>'', 
                     :unique => '', 
                     class: 'form-control' %>
  </div>
  <div class="form-group">
   <%= f.label :password %><br />
   <%= f.password_field :password, 
                        :'ng-model'=>'editUser.password', 
                        :type=>'password', 
                        :placeholder => 'Password',
                        :'required'=>'', 
                        class: 'form-control' %>
</div>
<div class="form-group">
   <%= f.label :password_confirmation %><br />
   <%= f.password_field :password_confirmation, 
                        :'ng-model'=>'editUser.password_confirmation', 
                        :type=>'password', :'required'=>'', 
                        :value => '',
                        class: 'form-control' %>
</div>
  <div class="actions">
    <%= f.submit 'Sign Up', 
                class: 'btn btn-default',
                'ng-disabled' => 'editUser.$invalid' %>
  </div>
<% end %>
<br>
<style type="text/css">
  .form-control {
   width: 25%;
}
</style>


